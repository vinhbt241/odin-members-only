<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <% if user_signed_in? %>
        <i><%= post.user.email %></i>
      <% else %>
        <i>Hidden</i>
      <% end %>
      </br>
      <strong><%= post.title %></strong>
      </br>
      <%= post.body %>
    </li>
  <% end %>
</ul>

<%= link_to "New Post", new_post_path %>
